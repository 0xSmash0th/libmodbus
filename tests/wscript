def build(bld):
    programs = ('random-test-slave',
                'unit-test-slave',
                'unit-test-master',
                'bandwidth-slave-one',
                'bandwidth-slave-many-up',
                'bandwidth-master')

    for program in programs:
        obj = bld.new_task_gen(
            features = 'cc cprogram',
            source = program + '.c',
            target = program,
            includes = '. ../src',
            uselib_local = 'modbus',
            install_path='')
